---
export interface Props {
  id: string;
  short_name: string;
  full_name: string;
  date_range_display: string;
  city: string;
  state: string;
  ticket_price?: string;
  primary_cta?: { label: string; url: string };
  secondary_ctas?: { label: string; url: string }[];
  is_flagship?: boolean;
  games?: string[];
  status?: string;
  compact?: boolean;
}

const { 
  id, 
  short_name, 
  full_name, 
  date_range_display, 
  city, 
  state, 
  ticket_price,
  primary_cta,
  secondary_ctas = [],
  is_flagship = false,
  games = [],
  status = "upcoming",
  compact = false
} = Astro.props;
---

<div class={`event-card ${compact ? 'compact' : ''}`}>
  {is_flagship && <span class="flagship-badge">Flagship</span>}
  {status === 'announced' && <span class="announced-badge">Announced</span>}
  
  <h3>{short_name}</h3>
  <p class="full-name">{full_name}</p>
  <p class="date-location">üìÖ {date_range_display} ‚Ä¢ üìç {city}, {state}</p>
  
  {games.length > 0 && (
    <p class="games">
      {games.slice(0, 3).join(" ‚Ä¢ ")}
      {games.length > 3 && " ‚Ä¢ more"}
    </p>
  )}
  
  <div class="card-footer">
    {primary_cta && (
      <a href={primary_cta.url} class="btn btn-primary">{primary_cta.label}</a>
    )}
    {secondary_ctas.slice(0, 2).map(cta => (
      <a href={cta.url} class="btn btn-outline">{cta.label}</a>
    ))}
  </div>
</div>

<style>
  .event-card {
    background: #ffffff;
    border: 2px solid #bae6fd;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 15px rgba(125,211,252,0.2);
    transition: border-color 0.3s, transform 0.2s;
    position: relative;
    display: flex;
    flex-direction: column;
  }
  
  .event-card:hover {
    border-color: #0ea5e9;
    transform: translateY(-2px);
  }
  
  .event-card.compact {
    padding: 20px;
  }
  
  .flagship-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: #0ea5e9;
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
  }
  
  .announced-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: #64748b;
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
  }
  
  h3 {
    font-size: 24px;
    margin: 0 0 5px 0;
    color: #0a0a1a;
  }
  
  .full-name {
    font-size: 14px;
    color: #64748b;
    margin: 0 0 15px 0;
  }
  
  .date-location {
    color: #475569;
    margin: 0 0 10px 0;
    font-size: 15px;
  }
  
  .games {
    font-size: 13px;
    color: #64748b;
    margin: 0 0 20px 0;
    font-style: italic;
  }
  
  .card-footer {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: auto;
    padding-top: 20px;
    border-top: 1px solid #e2e8f0;
  }
  
  .btn {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    transition: all 0.3s;
    text-align: center;
  }
  
  .btn-primary {
    background: #0a0a1a;
    color: white;
  }
  
  .btn-primary:hover {
    background: #1e293b;
  }
  
  .btn-outline {
    background: transparent;
    border: 2px solid #0a0a1a;
    color: #0a0a1a;
  }
  
  .btn-outline:hover {
    background: #0a0a1a;
    color: white;
  }
</style>
