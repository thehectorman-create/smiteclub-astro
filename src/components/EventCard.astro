---
export interface Props {
  id: string;
  short_name: string;
  full_name: string;
  date_display: string;
  city: string;
  state: string;
  ticket_price?: string;
  ticket_url?: string;
  is_flagship?: boolean;
  games?: string[];
  status?: string;
  compact?: boolean;
}

const { 
  id, 
  short_name, 
  full_name, 
  date_display, 
  city, 
  state, 
  ticket_price = "TBA",
  ticket_url,
  is_flagship = false,
  games = [],
  status = "upcoming",
  compact = false
} = Astro.props;
---

<div class={`event-card ${compact ? 'compact' : ''}`}>
  {is_flagship && <span class="flagship-badge">Flagship Event</span>}
  {status === 'past' && <span class="past-badge">Past Event</span>}
  
  <h3>{short_name}</h3>
  <p class="full-name">{full_name}</p>
  <p class="date-location">üìÖ {date_display} ‚Ä¢ üìç {city}, {state}</p>
  
  {games.length > 0 && (
    <p class="games">
      {games.slice(0, 4).join(" ‚Ä¢ ")}
      {games.length > 4 && " ‚Ä¢ more"}
    </p>
  )}
  
  <div class="card-footer">
    <span class="price">{ticket_price}</span>
    {ticket_url ? (
      <a href={ticket_url} class="btn btn-primary">Get Tickets</a>
    ) : (
      <a href={`/events/${id}`} class="btn btn-outline">Learn More</a>
    )}
  </div>
</div>

<style>
  .event-card {
    background: #ffffff;
    border: 2px solid #bae6fd;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 15px rgba(125,211,252,0.2);
    transition: border-color 0.3s, transform 0.2s;
    position: relative;
  }
  
  .event-card:hover {
    border-color: #0ea5e9;
    transform: translateY(-2px);
  }
  
  .event-card.compact {
    padding: 20px;
  }
  
  .flagship-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: #0ea5e9;
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
  }
  
  .past-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: #64748b;
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
  }
  
  h3 {
    font-size: 24px;
    margin: 0 0 5px 0;
    color: #0a0a1a;
  }
  
  .full-name {
    font-size: 14px;
    color: #64748b;
    margin: 0 0 15px 0;
  }
  
  .date-location {
    color: #475569;
    margin: 0 0 10px 0;
    font-size: 15px;
  }
  
  .games {
    font-size: 13px;
    color: #64748b;
    margin: 0 0 20px 0;
    font-style: italic;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }
  
  .price {
    font-size: 20px;
    font-weight: 700;
    color: #0a0a1a;
  }
  
  .btn {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    transition: all 0.3s;
  }
  
  .btn-primary {
    background: #0a0a1a;
    color: white;
  }
  
  .btn-primary:hover {
    background: #1e293b;
  }
  
  .btn-outline {
    background: transparent;
    border: 2px solid #0a0a1a;
    color: #0a0a1a;
  }
  
  .btn-outline:hover {
    background: #0a0a1a;
    color: white;
  }
</style>
