---
const stats = [
  { number: "200+", label: "players per flagship event" },
  { number: "$5K+", label: "prize support (typical)" },
  { number: "✓", label: "Dedicated judge coverage" },
  { number: "✓", label: "Tournament-ready terrain" }
];

const whyPlayersReturn = [
  "Clear, consistent rulings",
  "Terrain and missions designed for competitive play",
  "Friendly community, serious games"
];
---

<div class="social-proof">
  <div class="stats-row">
    {stats.map(stat => (
      <div class="stat">
        <span class="stat-number">{stat.number}</span>
        <span class="stat-label">{stat.label}</span>
      </div>
    ))}
  </div>
  
  <div class="why-return">
    <h3>Why players come back</h3>
    <ul>
      {whyPlayersReturn.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</div>

<style>
  .social-proof {
    padding: 60px 0;
  }
  
  .stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
    text-align: center;
  }
  
  .stat {
    display: flex;
    flex-direction: column;
  }
  
  .stat-number {
    font-size: 48px;
    font-weight: 900;
    color: #0a0a1a;
    line-height: 1;
  }
  
  .stat-label {
    font-size: 14px;
    color: #64748b;
    text-transform: lowercase;
    letter-spacing: 0.5px;
    margin-top: 8px;
  }
  
  .why-return {
    background: #f8fafc;
    padding: 30px;
    border-radius: 12px;
    border-left: 4px solid #7dd3fc;
  }
  
  .why-return h3 {
    font-size: 18px;
    color: #0a0a1a;
    margin-bottom: 15px;
  }
  
  .why-return ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .why-return li {
    padding: 10px 0;
    color: #475569;
    font-size: 15px;
    border-bottom: 1px solid #e2e8f0;
  }
  
  .why-return li:last-child {
    border-bottom: none;
  }
  
  .why-return li::before {
    content: "✓";
    color: #0ea5e9;
    font-weight: bold;
    margin-right: 10px;
  }
</style>
