---
export interface Props {
  title?: string;
  sponsors?: string[];
}

const { 
  title = "Our Sponsors", 
  sponsors = [] 
} = Astro.props;

// Only show if we have 4+ real sponsors
const hasEnoughSponsors = sponsors.length >= 4;
---

{sponsors.length > 0 ? (
  <div class="sponsor-strip">
    <p class="sponsor-title">{title}</p>
    <div class="sponsor-logos">
      {sponsors.map((sponsor) => (
        <div class="sponsor-name-badge">{sponsor}</div>
      ))}
    </div>
  </div>
) : (
  <div class="sponsor-text-row">
    <p>Sponsors: Coming soon. <a href="/sponsors">Interested? See sponsorship deck.</a></p>
  </div>
)}

<style>
  .sponsor-strip {
    background: #f8fafc;
    border-top: 2px solid #e2e8f0;
    border-bottom: 2px solid #e2e8f0;
    padding: 40px 0;
    text-align: center;
  }
  
  .sponsor-title {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #64748b;
    margin-bottom: 25px;
  }
  
  .sponsor-logos {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .sponsor-name-badge {
    background: #ffffff;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    padding: 15px 25px;
    font-weight: 700;
    color: #0a0a1a;
    font-size: 16px;
    white-space: nowrap;
  }
  
  .sponsor-text-row {
    background: #f8fafc;
    border-top: 2px solid #e2e8f0;
    border-bottom: 2px solid #e2e8f0;
    padding: 20px 0;
    text-align: center;
  }
  
  .sponsor-text-row p {
    margin: 0;
    color: #64748b;
    font-size: 14px;
  }
  
  .sponsor-text-row a {
    color: #0ea5e9;
    text-decoration: none;
    font-weight: 600;
  }
  
  .sponsor-text-row a:hover {
    text-decoration: underline;
  }
</style>
