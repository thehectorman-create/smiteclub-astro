---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Get upcoming flagship event for global CTAs
import eventsData from '../data/events.json';
const upcomingEvents = eventsData.events.filter(e => e.status === 'upcoming' || e.status === 'announced');
const nextFlagship = upcomingEvents.find(e => e.is_flagship) || upcomingEvents[0];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', sans-serif;
      background: #ffffff;
      color: #0a0a1a;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    header {
      background: #ffffff;
      border-bottom: 3px solid #7dd3fc;
      box-shadow: 0 2px 8px rgba(125,211,252,0.3);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    .header-main {
      padding: 15px 0;
    }
    
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo img {
      height: 45px;
      width: auto;
      display: block;
    }
    
    .nav-links {
      display: flex;
      gap: 30px;
      align-items: center;
    }
    
    .nav-links a {
      color: #0a0a1a;
      text-decoration: none;
      font-weight: 600;
      font-size: 15px;
      transition: color 0.3s;
    }
    
    .nav-links a:hover {
      color: #0ea5e9;
    }
    
    .dropdown {
      position: relative;
    }
    
    .dropdown-content {
      display: none;
      position: absolute;
      background: #ffffff;
      min-width: 220px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
      border: 2px solid #7dd3fc;
      border-radius: 8px;
      padding: 10px 0;
      top: 100%;
      margin-top: 10px;
    }
    
    .dropdown:hover .dropdown-content {
      display: block;
    }
    
    .dropdown-content a {
      display: block;
      padding: 10px 20px;
      color: #0a0a1a;
    }
    
    .dropdown-content a:hover {
      background: #f0f9ff;
    }
    
    /* Global Utility Strip */
    .utility-strip {
      background: #0a0a1a;
      padding: 10px 0;
    }
    
    .utility-strip .container {
      display: flex;
      justify-content: center;
      gap: 30px;
      align-items: center;
    }
    
    .utility-strip a {
      color: #7dd3fc;
      text-decoration: none;
      font-size: 14px;
      font-weight: 600;
      transition: color 0.3s;
    }
    
    .utility-strip a:hover {
      color: #ffffff;
    }
    
    .btn {
      display: inline-block;
      background: #0a0a1a;
      color: white;
      padding: 12px 24px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 700;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
      font-size: 15px;
    }
    
    .btn:hover {
      background: #1e293b;
      transform: translateY(-1px);
    }
    
    .btn-outline {
      background: transparent;
      border: 2px solid #0a0a1a;
      color: #0a0a1a;
    }
    
    .btn-outline:hover {
      background: #0a0a1a;
      color: white;
    }
    
    footer {
      background: #f8fafc;
      padding: 50px 0;
      margin-top: 80px;
      border-top: 3px solid #7dd3fc;
    }
    
    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
    }
    
    .footer-section h3 {
      font-size: 16px;
      color: #0a0a1a;
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .footer-section a {
      display: block;
      color: #64748b;
      text-decoration: none;
      margin: 8px 0;
      font-size: 14px;
    }
    
    .footer-section a:hover {
      color: #0ea5e9;
    }
    
    h1, h2, h3 {
      font-weight: 900;
      line-height: 1.2;
    }
    
    main {
      min-height: calc(100vh - 300px);
    }
    
    @media (max-width: 768px) {
      .utility-strip .container {
        flex-direction: column;
        gap: 10px;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="header-main">
      <div class="container">
        <nav>
          <a href="/" class="logo">
            <img src="/images/smite-club-logo.png" alt="Smite Club" />
          </a>
          <div class="nav-links">
            <div class="dropdown">
              <a href="/events">Events ‚ñº</a>
              <div class="dropdown-content">
                <a href="/events/scorched-earth-open-2026">Scorched Earth Open</a>
                <a href="/events/smite-club-open-2026">Smite Club Open</a>
              </div>
            </div>
            <a href="/team">Team Smite Club</a>
            <a href="/player-hub">Player Hub</a>
            <a href="/archive">Archive</a>
            <a href="/sponsors">Sponsors</a>
            <a href="/contact">Contact</a>
          </div>
        </nav>
      </div>
    </div>
    
    <!-- Global Utility Strip -->
    <div class="utility-strip">
      <div class="container">
        {nextFlagship?.primary_cta && (
          <a href={nextFlagship.primary_cta.url}>üéüÔ∏è Tickets</a>
        )}
        <a href="/player-hub">üìã Player Packets</a>
        <a href="/contact">üìß Contact</a>
      </div>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>Events</h3>
          <a href="/events/scorched-earth-open-2026">Scorched Earth Open 2026</a>
          <a href="/events/smite-club-open-2026">Smite Club Open 2026</a>
          <a href="/archive">Past Events</a>
        </div>
        <div class="footer-section">
          <h3>Resources</h3>
          <a href="/player-hub">Player Hub</a>
          <a href="/player-hub#documents">Event Packets</a>
          <a href="/player-hub#faq">FAQ</a>
        </div>
        <div class="footer-section">
          <h3>Connect</h3>
          <a href="/contact">Contact Us</a>
          <a href="/sponsors">Become a Sponsor</a>
        </div>
        <div class="footer-section">
          <h3>Smite Club</h3>
          <p style="color: #64748b; font-size: 14px; line-height: 1.6;">
            Arizona's competitive tabletop club. Built by players, for players.
          </p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
