---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', sans-serif;
      background: #ffffff;
      color: #0a0a1a;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    header {
      background: #ffffff;
      padding: 20px 0;
      border-bottom: 3px solid #7dd3fc;
      box-shadow: 0 2px 8px rgba(125,211,252,0.3);
    }
    
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-size: 24px;
      font-weight: 900;
      color: #0a0a1a;
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    
    .nav-links {
      display: flex;
      gap: 30px;
    }
    
    .nav-links a {
      color: #0a0a1a;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s;
    }
    
    .nav-links a:hover {
      color: #0ea5e9;
    }
    
    .btn {
      display: inline-block;
      background: #0a0a1a;
      color: white;
      padding: 12px 24px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 700;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
    }
    
    .btn:hover {
      background: #1e293b;
      transform: translateY(-1px);
    }
    
    .btn-outline {
      background: transparent;
      border: 2px solid #0a0a1a;
      color: #0a0a1a;
    }
    
    .btn-outline:hover {
      background: #0a0a1a;
      color: white;
    }
    
    footer {
      background: #f8fafc;
      padding: 40px 0;
      margin-top: 80px;
      border-top: 3px solid #7dd3fc;
    }
    
    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
    }
    
    h1, h2, h3 {
      font-weight: 900;
      line-height: 1.2;
    }
    
    main {
      min-height: calc(100vh - 300px);
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <nav>
        <a href="/" class="logo">SMITE CLUB</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/player-hub">Player Hub</a>
          <a href="/documents">Documents</a>
          <a href="/archive">Archive</a>
        </div>
      </nav>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <div class="container">
      <div class="footer-content">
        <div>
          <h3>SMITE CLUB</h3>
          <p>Arizona's premier Warhammer tournament series</p>
        </div>
        <div>
          <h3>Contact</h3>
          <p>info@smiteclub40k.com</p>
        </div>
        <div>
          <h3>Social</h3>
          <p>Discord • Instagram • Facebook</p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
