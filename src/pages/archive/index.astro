---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Event Archive | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 80px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 48px;
      margin-bottom: 20px;
      color: #0a0a1a;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .year-section {
      margin-bottom: 50px;
    }
    
    .year-section h2 {
      font-size: 28px;
      margin-bottom: 20px;
      color: #0a0a1a;
      border-bottom: 2px solid #e0f2fe;
      padding-bottom: 10px;
    }
    
    .event-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 25px;
    }
    
    .event-card {
      background: #ffffff;
      border: 2px solid #bae6fd;
      border-radius: 12px;
      padding: 30px;
      text-decoration: none;
      color: inherit;
      transition: border-color 0.3s;
      box-shadow: 0 4px 15px rgba(125,211,252,0.15);
    }
    
    .event-card:hover {
      border-color: #0ea5e9;
    }
    
    .event-card h3 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #0a0a1a;
    }
    
    .event-card .date {
      color: #64748b;
      margin-bottom: 15px;
    }
    
    .event-card .highlights {
      color: #475569;
      font-size: 14px;
    }
    
    .event-card .highlights span {
      display: inline-block;
      background: #f0f9ff;
      padding: 4px 10px;
      border-radius: 4px;
      margin: 5px 5px 0 0;
      color: #0ea5e9;
      border: 1px solid #bae6fd;
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Event Archive</h1>
      <p style="color: #64748b; font-size: 20px;">Results, winners, and memories from past tournaments</p>
    </div>
  </section>

