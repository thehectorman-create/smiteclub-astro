---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Archive | Scorched Earth Open">
  <style>
    .hero {
      background: #0d0b08;
      padding: 60px 0;
      text-align: center;
      border-bottom: 3px solid #c9a45c;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 15px;
      color: #c9a45c;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    
    .section {
      padding: 50px 0;
    }
    
    .year-section {
      margin-bottom: 40px;
    }
    
    .year-section h2 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #c9a45c;
      border-bottom: 2px solid #3d2e1f;
      padding-bottom: 10px;
    }
    
    .event-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }
    
    .event-card {
      background: #1a1209;
      border: 2px solid #3d2e1f;
      border-radius: 8px;
      padding: 25px;
      text-decoration: none;
      color: inherit;
      transition: border-color 0.3s;
    }
    
    .event-card:hover {
      border-color: #c9a45c;
    }
    
    .event-card h3 {
      font-size: 20px;
      margin-bottom: 8px;
      color: #c9a45c;
    }
    
    .event-card .date {
      color: #808080;
      font-size: 14px;
      margin-bottom: 12px;
    }
    
    .event-card .highlights {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    
    .event-card .highlights span {
      background: #0d0b08;
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 12px;
      color: #a0a0a0;
      border: 1px solid #3d2e1f;
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Event Archive</h1>
      <p style="color: #a0a0a0; font-size: 18px;">Past Scorched Earth Opens</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      
      <!-- 2026 -->
      <div class="year-section">
        <h2>2026</h2>
        <div class="event-grid">
          <div class="event-card">
            <h3>Scorched Earth Open 2026</h3>
            <p class="date">February 2026 â€¢ Upcoming</p>
            <div class="highlights">
              <span>Registration Opening Soon</span>
            </div>
          </div>
        </div>
      </div>

      <!-- 2025 -->
      <div class="year-section">
        <h2>2025</h2>
        <div class="event-grid">
          <a href="/archive/seo-2025" class="event-card">
            <h3>Scorched Earth Open 2025</h3>
            <p class="date">March 8-9, 2025</p>
            <div class="highlights">
              <span>Results</span>
              <span>Winners</span>
              <span>Photos</span>
            </div>
          </a>
        </div>
      </div>

      <!-- 2024 -->
      <div class="year-section">
        <h2>2024</h2>
        <div class="event-grid">
          <a href="/archive/seo-2024" class="event-card">
            <h3>Scorched Earth Open 2024</h3>
            <p class="date">March 2024</p>
            <div class="highlights">
              <span>Results</span>
              <span>Gallery</span>
            </div>
          </a>
        </div>
      </div>

      <!-- 2023 -->
      <div class="year-section">
        <h2>2023</h2>
        <div class="event-grid">
          <a href="/archive/seo-2023" class="event-card">
            <h3>Scorched Earth Open 2023</h3>
            <p class="date">March 2023</p>
            <div class="highlights">
              <span>1st: Joshua Rennie</span>
              <span>2nd: Terek Haehl</span>
              <span>3rd: Chase Chappell</span>
            </div>
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>
