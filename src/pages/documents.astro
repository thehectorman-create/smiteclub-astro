<Layout title="Documents | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 80px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 48px;
      margin-bottom: 20px;
      color: #0a0a1a;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 32px;
      margin-bottom: 30px;
      color: #0a0a1a;
      border-bottom: 2px solid #e0f2fe;
      padding-bottom: 15px;
    }
    
    .doc-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }
    
    .doc-item {
      background: #ffffff;
      border: 2px solid #bae6fd;
      border-radius: 8px;
      padding: 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      text-decoration: none;
      color: inherit;
      transition: border-color 0.3s;
      box-shadow: 0 2px 8px rgba(125,211,252,0.15);
    }
    
    .doc-item:hover {
      border-color: #0ea5e9;
    }
    
    .doc-icon {
      font-size: 32px;
    }
    
    .doc-info h3 {
      font-size: 18px;
      margin-bottom: 5px;
      color: #0a0a1a;
    }
    
    .doc-info p {
      color: #64748b;
      font-size: 14px;
    }
    
    .doc-arrow {
      margin-left: auto;
      color: #0ea5e9;
      font-size: 20px;
    }
    
    .category {
      margin-bottom: 50px;
    }
  </style>

