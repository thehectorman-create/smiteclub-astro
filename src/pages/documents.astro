<Layout title="Documents | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
      padding: 80px 0;
      text-align: center;
    }
    
    .hero h1 {
      font-size: 48px;
      margin-bottom: 20px;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 32px;
      margin-bottom: 30px;
      color: #c41e3a;
    }
    
    .doc-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }
    
    .doc-item {
      background: #1a1a1a;
      border: 1px solid #333;
      border-radius: 8px;
      padding: 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      text-decoration: none;
      color: inherit;
      transition: background 0.3s, border-color 0.3s;
    }
    
    .doc-item:hover {
      background: #222;
      border-color: #c41e3a;
    }
    
    .doc-icon {
      font-size: 32px;
    }
    
    .doc-info h3 {
      font-size: 18px;
      margin-bottom: 5px;
      color: #fff;
    }
    
    .doc-info p {
      color: #aaa;
      font-size: 14px;
    }
    
    .doc-arrow {
      margin-left: auto;
      color: #c41e3a;
      font-size: 20px;
    }
    
    .category {
      margin-bottom: 40px;
    }
    
    .category h2 {
      font-size: 24px;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #333;
    }
  </style>

