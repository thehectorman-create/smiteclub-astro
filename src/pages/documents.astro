---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Documents | Scorched Earth Open 2025">
  <style>
    .hero {
      background: #0d0b08;
      padding: 60px 0;
      text-align: center;
      border-bottom: 3px solid #c9a45c;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 15px;
      color: #c9a45c;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    
    .section {
      padding: 50px 0;
    }
    
    .section-title {
      font-size: 24px;
      margin-bottom: 20px;
      color: #c9a45c;
      border-bottom: 2px solid #3d2e1f;
      padding-bottom: 10px;
    }
    
    .doc-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 15px;
    }
    
    .doc-item {
      background: #1a1209;
      border: 2px solid #3d2e1f;
      border-radius: 6px;
      padding: 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      text-decoration: none;
      color: inherit;
      transition: border-color 0.3s;
    }
    
    .doc-item:hover {
      border-color: #c9a45c;
    }
    
    .doc-icon {
      font-size: 28px;
    }
    
    .doc-info h3 {
      font-size: 16px;
      margin-bottom: 5px;
      color: #f5f5f5;
    }
    
    .doc-info p {
      color: #808080;
      font-size: 13px;
    }
    
    .doc-arrow {
      margin-left: auto;
      color: #c9a45c;
    }
    
    .category {
      margin-bottom: 40px;
    }
  </style>

