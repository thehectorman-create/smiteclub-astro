---
import Layout from '../layouts/Layout.astro';
import EventCard from '../components/EventCard.astro';
import SponsorStrip from '../components/SponsorStrip.astro';
import SocialProof from '../components/SocialProof.astro';
import eventsData from '../data/events.json';

const upcomingEvents = eventsData.events.filter(e => e.status === 'upcoming' || e.status === 'announced');
const flagshipEvents = upcomingEvents.filter(e => e.id === 'scorched-earth-open-2026' || e.id === 'smite-club-open-2026');
---

<Layout title="Smite Club | Arizona's Competitive Tabletop Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #0a0a1a 0%, #1e293b 100%);
      padding: 100px 0 80px;
      text-align: center;
      color: white;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 20px;
      line-height: 1.2;
      max-width: 850px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero .subtitle {
      font-size: 20px;
      color: #94a3b8;
      margin-bottom: 40px;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero-buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }
    
    .hero .btn {
      font-size: 16px;
      padding: 14px 28px;
    }
    
    .hero .btn-primary {
      background: #c9a45c;
      color: #0a0a1a;
    }
    
    .hero .btn-primary:hover {
      background: #d4b76a;
    }
    
    .hero .btn-outline {
      border-color: #7dd3fc;
      color: #7dd3fc;
    }
    
    .hero .btn-outline:hover {
      background: #7dd3fc;
      color: #0a0a1a;
    }
    
    .ticket-note {
      font-size: 13px;
      color: #64748b;
      margin-top: 15px;
    }
    
    .section {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 32px;
      margin-bottom: 40px;
      text-align: center;
      color: #0a0a1a;
    }
    
    .events-showcase {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 30px;
    }
    
    .community-section {
      background: #f8fafc;
      padding: 40px 0;
      border-top: 2px solid #e2e8f0;
      text-align: center;
    }
    
    .community-section p {
      color: #64748b;
      font-size: 15px;
      margin: 0;
    }
  </style>

  <!-- HERO -->
  <section class="hero">
    <div class="container">
      <h1>Arizona's competitive tabletop club, hosting two flagship events each year.</h1>
      <p class="subtitle">Scorched Earth Open and Smite Club Open. Built by players. Clean ops, great terrain, and a community that travels.</p>
      
      <div class="hero-buttons">
        <a href="/events/scorched-earth-open-2026" class="btn btn-primary">Get Tickets</a>
        <a href="/player-hub" class="btn btn-outline">View Player Packets</a>
      </div>
      
      <p class="ticket-note">Tickets are sold through our official storefront.</p>
    </div>
  </section>

  <!-- FLAGSHIP EVENTS -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Our Flagship Events</h2>
      <div class="events-showcase">
        {flagshipEvents.map(event => (
          <EventCard 
            id={event.id}
            short_name={event.short_name}
            full_name={event.full_name}
            date_range_display={event.date_range_display}
            city={event.city}
            state={event.state}
            ticket_price={event.ticket_price}
            primary_cta={event.primary_cta}
            secondary_ctas={event.secondary_ctas}
            is_flagship={event.is_flagship}
            games={event.games}
            status={event.status}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- SOCIAL PROOF -->
  <SocialProof />

  <!-- COMMUNITY NOTE -->
  <section class="community-section">
    <div class="container">
      <p>Community: A portion of proceeds from all events supports local schools and community partners.</p>
    </div>
  </section>

  <!-- SPONSORS -->
  <SponsorStrip title="Our Sponsors" sponsors={["Old World Games", "Primetime Games", "Broken Egg Games"]} />

  <!-- FINAL CTA -->
  <section class="section" style="background: linear-gradient(135deg, #0a0a1a 0%, #1e293b 100%); color: white; text-align: center;">
    <div class="container">
      <h2 style="font-size: 32px; margin-bottom: 20px;">Ready to compete?</h2>
      <p style="font-size: 18px; color: #94a3b8; margin-bottom: 30px;">Join players from across the Southwest for competitive tabletop gaming.</p>
      <a href="/events/scorched-earth-open-2026" class="btn btn-primary" style="font-size: 18px; padding: 16px 40px;">Get Tickets for Scorched Earth Open 2026</a>
    </div>
  </section>
</Layout>
