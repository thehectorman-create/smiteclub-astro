---
import Layout from '../layouts/Layout.astro';
import EventCard from '../components/EventCard.astro';
import SponsorStrip from '../components/SponsorStrip.astro';
import SocialProof from '../components/SocialProof.astro';
import eventsData from '../data/events.json';

const upcomingEvents = eventsData.events.filter(e => e.status === 'upcoming');
const seoEvent = upcomingEvents.find(e => e.id === 'scorched-earth-open-2026');
const scoEvent = upcomingEvents.find(e => e.id === 'smite-club-open-2026');
---

<Layout title="Smite Club | Arizona's Competitive Tabletop Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #0a0a1a 0%, #1e293b 100%);
      padding: 100px 0 80px;
      text-align: center;
      color: white;
    }
    
    .hero h1 {
      font-size: 44px;
      margin-bottom: 20px;
      line-height: 1.2;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero .subtitle {
      font-size: 22px;
      color: #7dd3fc;
      margin-bottom: 40px;
    }
    
    .hero-buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 25px;
    }
    
    .hero .btn {
      font-size: 16px;
      padding: 14px 28px;
    }
    
    .hero .btn-primary {
      background: #c9a45c;
      color: #0a0a1a;
    }
    
    .hero .btn-primary:hover {
      background: #d4b76a;
    }
    
    .hero .btn-outline {
      border-color: #7dd3fc;
      color: #7dd3fc;
    }
    
    .hero .btn-outline:hover {
      background: #7dd3fc;
      color: #0a0a1a;
    }
    
    .ticket-note {
      font-size: 13px;
      color: #94a3b8;
      margin-top: 10px;
    }
    
    .section {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 32px;
      margin-bottom: 40px;
      text-align: center;
      color: #0a0a1a;
    }
    
    .events-showcase {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 30px;
    }
    
    .charity-block {
      background: #f0f9ff;
      border: 2px solid #bae6fd;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
      max-width: 600px;
      margin: 60px auto 0;
    }
    
    .charity-block p {
      margin: 0;
      color: #475569;
      font-size: 14px;
    }
  </style>

  <!-- HERO -->
  <section class="hero">
    <div class="container">
      <h1>Arizona's competitive tabletop club, hosting two flagship events each year.</h1>
      <p class="subtitle">Scorched Earth Open and Smite Club Open. Built by players. Clean ops, great terrain, and a community that travels.</p>
      
      <div class="hero-buttons">
        <a href="/events/scorched-earth-open-2026" class="btn btn-primary">Get Tickets</a>
        <a href="https://discord.gg/smiteclub" target="_blank" class="btn btn-outline">Join Discord</a>
        <a href="/player-hub" class="btn btn-outline">View Event Packets</a>
      </div>
      
      <p class="ticket-note">Tickets are sold through our official storefront.</p>
    </div>
  </section>

  <!-- EVENTS -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Our Flagship Events</h2>
      <div class="events-showcase">
        {seoEvent && (
          <EventCard 
            id={seoEvent.id}
            short_name="Scorched Earth Open"
            full_name={seoEvent.full_name}
            date_display={seoEvent.date_display}
            city={seoEvent.city}
            state={seoEvent.state}
            ticket_price={seoEvent.ticket_price}
            ticket_url={seoEvent.ticket_url}
            is_flagship={false}
            games={seoEvent.games}
          />
        )}
        {scoEvent && (
          <EventCard 
            id={scoEvent.id}
            short_name="Smite Club Open"
            full_name={scoEvent.full_name}
            date_display={scoEvent.date_display}
            city={scoEvent.city}
            state={scoEvent.state}
            ticket_price={scoEvent.ticket_price}
            is_flagship={true}
            games={scoEvent.games}
          />
        )}
      </div>
      
      <div class="charity-block">
        <p>❤️ 50% of proceeds from all events benefit local schools and community programs</p>
      </div>
    </div>
  </section>

  <!-- SOCIAL PROOF -->
  <SocialProof />

  <!-- SPONSORS -->
  <SponsorStrip title="Our Sponsors" />

  <!-- CTA -->
  <section class="section" style="background: linear-gradient(135deg, #0a0a1a 0%, #1e293b 100%); color: white; text-align: center;">
    <div class="container">
      <h2 style="font-size: 32px; margin-bottom: 20px;">Ready to compete?</h2>
      <p style="font-size: 18px; color: #94a3b8; margin-bottom: 30px;">Join 200+ players for competitive tabletop gaming with a community that travels.</p>
      <a href="/events/scorched-earth-open-2026" class="btn btn-primary" style="font-size: 18px; padding: 16px 40px;">Get Tickets for Scorched Earth Open 2026</a>
    </div>
  </section>
</Layout>
