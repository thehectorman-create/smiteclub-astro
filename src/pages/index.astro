---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Smite Club | Arizona's Premier Warhammer Tournament Series">
  <style>
    .hero {
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      padding: 100px 0;
      text-align: center;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .hero h1 {
      font-size: 56px;
      margin-bottom: 20px;
      color: #1a1a1a;
    }
    
    .hero h1 span {
      color: #1e40af;
    }
    
    .hero-sub {
      font-size: 24px;
      color: #64748b;
      margin-bottom: 40px;
    }
    
    .hero-buttons {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .trust-bar {
      background: #ffffff;
      padding: 40px 0;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .trust-items {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 30px;
      text-align: center;
    }
    
    .trust-item {
      padding: 20px;
    }
    
    .trust-item .number {
      font-size: 48px;
      font-weight: 900;
      color: #1e40af;
    }
    
    .trust-item .label {
      color: #64748b;
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .section {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 36px;
      margin-bottom: 40px;
      text-align: center;
      color: #1a1a1a;
    }
    
    .event-card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 40px;
      margin-bottom: 30px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }
    
    .event-card h3 {
      font-size: 28px;
      margin-bottom: 10px;
      color: #1e40af;
    }
    
    .event-meta {
      display: flex;
      gap: 30px;
      margin: 20px 0;
      flex-wrap: wrap;
    }
    
    .event-meta span {
      color: #64748b;
    }
    
    .event-description {
      color: #475569;
      margin: 20px 0;
      font-size: 18px;
    }
    
    .urgent {
      background: #1e40af;
      color: white;
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
    }
    
    .countdown {
      background: #f1f5f9;
      padding: 30px;
      border-radius: 8px;
      margin: 30px 0;
      text-align: center;
    }
    
    .countdown-text {
      font-size: 24px;
      font-weight: 700;
      color: #1a1a1a;
    }
    
    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: start;
    }
    
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 36px;
      }
      .two-col {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <!-- HERO -->
  <section class="hero">
    <div class="container">
      <h1>Arizona's <span>Premier</span><br>Warhammer 40K Tournament Series</h1>
      <p class="hero-sub">200+ players ‚Ä¢ $5,000+ in prizes ‚Ä¢ ITC-sanctioned events</p>
      
