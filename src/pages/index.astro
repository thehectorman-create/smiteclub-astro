---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Smite Club | Arizona's Premier Tabletop Tournament Series">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 100px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 52px;
      margin-bottom: 20px;
      color: #0a0a1a;
      line-height: 1.2;
    }
    
    .hero h1 span {
      color: #0ea5e9;
    }
    
    .hero-sub {
      font-size: 22px;
      color: #475569;
      margin-bottom: 20px;
    }
    
    .hero-games {
      font-size: 16px;
      color: #64748b;
      margin-bottom: 40px;
      font-style: italic;
    }
    
    .hero-buttons {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .trust-bar {
      background: #ffffff;
      padding: 40px 0;
      border-bottom: 1px solid #e0f2fe;
    }
    
    .trust-items {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 30px;
      text-align: center;
    }
    
    .trust-item {
      padding: 20px;
    }
    
    .trust-item .number {
      font-size: 48px;
      font-weight: 900;
      color: #0a0a1a;
    }
    
    .trust-item .label {
      color: #64748b;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .section {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 36px;
      margin-bottom: 40px;
      text-align: center;
      color: #0a0a1a;
    }
    
    .event-card {
      background: #ffffff;
      border: 2px solid #bae6fd;
      border-radius: 12px;
      padding: 40px;
      margin-bottom: 30px;
      box-shadow: 0 4px 15px rgba(125,211,252,0.2);
    }
    
    .event-card h3 {
      font-size: 28px;
      margin-bottom: 10px;
      color: #0a0a1a;
    }
    
    .event-card img {
      max-width: 100%;
      height: auto;
      margin-bottom: 20px;
      max-height: 180px;
    }
    
    .event-meta {
      display: flex;
      gap: 30px;
      margin: 20px 0;
      flex-wrap: wrap;
    }
    
    .event-meta span {
      color: #64748b;
    }
    
    .event-description {
      color: #475569;
      margin: 20px 0;
      font-size: 17px;
    }
    
    .game-list {
      color: #64748b;
      font-size: 14px;
      margin: 15px 0;
      line-height: 1.6;
    }
    
    .urgent {
      background: #0a0a1a;
      color: white;
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
      border: 2px solid #7dd3fc;
    }
    
    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: start;
    }
    
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 36px;
      }
      .two-col {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <!-- HERO -->
  <section class="hero">
