---
import Layout from '../layouts/Layout.astro';
import EventCard from '../components/EventCard.astro';
import eventsData from '../data/events.json';

const upcomingEvents = eventsData.events.filter(e => e.status === 'upcoming' || e.status === 'announced');
const allReadyDocuments = upcomingEvents.flatMap(e => 
  (e.documents || []).filter(d => d.is_ready).map(d => ({ ...d, eventName: e.short_name }))
);
const allDeadlines = upcomingEvents.flatMap(e => 
  (e.deadlines || []).map(d => ({ ...d, eventName: e.short_name }))
);
---

<Layout title="Player Hub | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 80px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 15px;
      color: #0a0a1a;
    }
    
    .hero-sub {
      font-size: 18px;
      color: #475569;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 28px;
      margin-bottom: 30px;
      color: #0a0a1a;
    }
    
    .events-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 25px;
      margin-bottom: 50px;
    }
    
    .card {
      background: #ffffff;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      padding: 30px;
      margin-bottom: 30px;
    }
    
    .docs-table {
      width: 100%;
      border-collapse: collapse;
    }
    
    .docs-table th,
    .docs-table td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .docs-table th {
      background: #f8fafc;
      font-weight: 700;
      color: #0a0a1a;
      font-size: 13px;
      text-transform: uppercase;
    }
    
    .docs-table td {
      color: #475569;
    }
    
    .deadline-row {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 18px 0;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .deadline-row:last-child {
      border-bottom: none;
    }
    
    .deadline-info h4 {
      font-size: 16px;
      color: #0a0a1a;
      margin-bottom: 5px;
    }
    
    .deadline-info p {
      color: #64748b;
      font-size: 14px;
      margin: 0;
    }
    
    .deadline-date {
      color: #c9a45c;
      font-weight: 700;
      font-size: 15px;
      white-space: nowrap;
      margin-left: 20px;
    }
    
    .tool-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }
    
    .tool-card {
      background: #ffffff;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      padding: 25px;
      text-align: center;
      transition: border-color 0.3s;
    }
    
    .tool-card:hover {
      border-color: #0ea5e9;
    }
    
    .tool-card h4 {
      color: #0a0a1a;
      margin-bottom: 10px;
      font-size: 16px;
    }
    
    .tool-card p {
      color: #64748b;
      font-size: 14px;
      margin-bottom: 15px;
    }
    
    .tool-card a {
      color: #0ea5e9;
      font-weight: 600;
      text-decoration: none;
      font-size: 14px;
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Player Hub</h1>
      <p class="hero-sub">Your operational center for Smite Club events</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      
      <!-- EVENTS -->
      <h2 class="section-title">Upcoming Events</h2>
      <div class="events-grid">
        {upcomingEvents.map(event => (
          <EventCard 
            id={event.id}
            short_name={event.short_name}
            full_name={event.full_name}
            date_range_display={event.date_range_display}
            city={event.city}
            state={event.state}
            ticket_price={event.ticket_price}
            primary_cta={event.primary_cta}
            secondary_ctas={event.secondary_ctas}
            is_flagship={event.is_flagship}
            games={event.games}
            status={event.status}
          />
        ))}
      </div>

      <!-- KEY DEADLINES -->
      {allDeadlines.length > 0 && (
        <>
          <h2 class="section-title" id="deadlines">Key Deadlines</h2>
          <div class="card">
            {allDeadlines.map(d => (
              <div class="deadline-row">
                <div class="deadline-info">
                  <h4>{d.label} <span style="color: #64748b; font-weight: 400;">({d.eventName})</span></h4>
                  <p>{d.note}</p>
                </div>
                <span class="deadline-date">{d.date}</span>
              </div>
            ))}
          </div>
        </>
      )}

      <!-- DOCUMENTS -->
      <h2 class="section-title" id="documents">Event Documents</h2>
      {allReadyDocuments.length > 0 ? (
        <div class="card">
          <table class="docs-table">
            <thead>
              <tr>
                <th>Document</th>
                <th>Event</th>
                <th>For</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {allReadyDocuments.map(doc => (
                <tr>
                  <td>{doc.title}</td>
                  <td>{doc.eventName}</td>
                  <td style="font-size: 14px;">{doc.audience}</td>
                  <td style="text-align: right;">
                    <a href={doc.url} class="btn" style="padding: 8px 16px; font-size: 13px;">
                      {doc.type === 'PDF' ? 'Download' : 'View'}
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="card" style="text-align: center; padding: 40px;">
          <p style="color: #64748b;">Event documents will be posted here when available.</p>
          <p style="color: #94a3b8; font-size: 14px; margin-top: 10px;">Join Discord for early announcements.</p>
        </div>
      )}

      <!-- TOOLS -->
      <h2 class="section-title">Tools & Links</h2>
      <div class="tool-grid">
        <div class="tool-card">
          <h4>üì± Best Coast Pairings</h4>
          <p>Submit army lists</p>
          <a href="https://www.bestcoastpairings.com" target="_blank">Open BCP ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>‚ùì FAQ</h4>
          <p>Common questions</p>
          <a href="/player-hub#faq">View FAQ ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>üìß Contact</h4>
          <p>Questions & support</p>
          <a href="mailto:info@smiteclub40k.com">Email Us ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>üõí Store</h4>
          <p>Purchase tickets</p>
          <a href="https://www.smiteclub40k.com/store" target="_blank">Shop Now ‚Üí</a>
        </div>
      </div>

    </div>
  </section>
</Layout>
