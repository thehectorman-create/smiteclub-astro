---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Player Hub | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 80px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 48px;
      margin-bottom: 20px;
      color: #0a0a1a;
    }
    
    .hero-sub {
      font-size: 20px;
      color: #475569;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 32px;
      margin-bottom: 30px;
      color: #0a0a1a;
    }
    
    .card {
      background: #ffffff;
      border: 2px solid #bae6fd;
      border-radius: 12px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 4px 15px rgba(125,211,252,0.15);
    }
    
    .card h3 {
      font-size: 24px;
      margin-bottom: 15px;
      color: #0a0a1a;
    }
    
    .card p {
      color: #64748b;
      margin-bottom: 20px;
    }
    
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 30px;
    }
    
    .link-list {
      list-style: none;
    }
    
    .link-list li {
      margin: 15px 0;
      padding: 15px;
      background: #f0f9ff;
      border-radius: 6px;
      transition: background 0.3s;
      border: 1px solid #bae6fd;
    }
    
    .link-list li:hover {
      background: #e0f2fe;
    }
    
    .link-list a {
      color: #0a0a1a;
      text-decoration: none;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .deadline {
      background: #0a0a1a;
      color: white;
      padding: 20px;
      border-radius: 8px;
      margin: 20px 0;
      border: 2px solid #7dd3fc;
    }
    
    .deadline strong {
      display: block;
      font-size: 18px;
      margin-bottom: 5px;
    }
    
    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }
    
    @media (max-width: 768px) {
      .two-col {
        grid-template-columns: 1fr;
      }
      .card-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Player Hub</h1>
      <p class="hero-sub">Everything you need to compete at Smite Club events</p>
    </div>
  </section>

  <!-- CURRENT EVENT DEADLINES -->
  <section class="section" style="background: #111;">
    <div class="container">
      <h2 class="section-title">‚è∞ Upcoming Deadlines ‚Äî SEO 2025</h2>
      
      <div class="deadline">
        <strong>List Submission Deadline</strong>
        February 24, 2026 at 11:59 PM MST<br>
        Submit via Best Coast Pairings
      </div>
      
      <div class="deadline" style="background: #9a1830;">
        <strong>Early Bird Pricing Ends</strong>
        February 10, 2026<br>
        Price increases from $75 to $90
      </div>
      
      <div class="deadline" style="background: #333;">
        <strong>Event Dates</strong>
        February 28 - March 1, 2026<br>
        Papago Elementary, Phoenix, AZ
      </div>
    </div>
  </section>

  <!-- QUICK LINKS GRID -->
