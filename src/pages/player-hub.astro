---
import Layout from '../layouts/Layout.astro';
import EventCard from '../components/EventCard.astro';
import eventsData from '../data/events.json';

const upcomingEvents = eventsData.events.filter(e => e.status === 'upcoming');
const pastEvents = eventsData.past_events.slice(0, 3);
---

<Layout title="Player Hub | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 80px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 15px;
      color: #0a0a1a;
    }
    
    .hero-sub {
      font-size: 18px;
      color: #475569;
    }
    
    .section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 28px;
      margin-bottom: 30px;
      color: #0a0a1a;
    }
    
    .events-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }
    
    .deadline-card {
      background: #0a0a1a;
      color: white;
      padding: 25px;
      border-radius: 12px;
      border: 3px solid #7dd3fc;
      margin-bottom: 30px;
    }
    
    .deadline-card h3 {
      color: #7dd3fc;
      margin-bottom: 15px;
      font-size: 20px;
    }
    
    .deadline-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    
    .deadline-item {
      background: rgba(255,255,255,0.1);
      padding: 15px;
      border-radius: 8px;
    }
    
    .deadline-item .date {
      font-weight: 700;
      color: #c9a45c;
      font-size: 16px;
    }
    
    .deadline-item .label {
      font-size: 14px;
      color: #94a3b8;
      margin-top: 5px;
    }
    
    .downloads-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }
    
    .downloads-table th,
    .downloads-table td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .downloads-table th {
      background: #f8fafc;
      font-weight: 700;
      color: #0a0a1a;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .downloads-table td {
      color: #475569;
    }
    
    .tool-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }
    
    .tool-card {
      background: #ffffff;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
      transition: border-color 0.3s;
    }
    
    .tool-card:hover {
      border-color: #0ea5e9;
    }
    
    .tool-card h4 {
      color: #0a0a1a;
      margin-bottom: 10px;
    }
    
    .tool-card p {
      color: #64748b;
      font-size: 14px;
      margin-bottom: 15px;
    }
    
    .tool-card a {
      color: #0ea5e9;
      font-weight: 600;
      text-decoration: none;
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Player Hub</h1>
      <p class="hero-sub">Your operational center for Smite Club events</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      
      <!-- UPCOMING EVENTS -->
      <h2 class="section-title">Upcoming Events</h2>
      <div class="events-grid">
        {upcomingEvents.map(event => (
          <EventCard 
            id={event.id}
            short_name={event.short_name}
            full_name={event.full_name}
            date_display={event.date_display}
            city={event.city}
            state={event.state}
            ticket_price={event.ticket_price}
            ticket_url={event.ticket_url}
            is_flagship={event.is_flagship}
            games={event.games}
            compact={true}
          />
        ))}
      </div>

      <!-- KEY DEADLINES -->
      <div class="deadline-card">
        <h3>‚ö†Ô∏è Key Deadlines</h3>
        <div class="deadline-list">
          <div class="deadline-item">
            <div class="date">February 21, 2026</div>
            <div class="label">Scorched Earth Open ‚Äî List Submission (BCP)</div>
          </div>
          <div class="deadline-item">
            <div class="date">February 28, 2026</div>
            <div class="label">Scorched Earth Open ‚Äî Day 1 Check-in</div>
          </div>
          <div class="deadline-item">
            <div class="date">TBA</div>
            <div class="label">Smite Club Open 2026 ‚Äî Registration Opens</div>
          </div>
        </div>
      </div>

      <!-- DOWNLOADS -->
      <h2 class="section-title" id="documents">Event Documents</h2>
      <table class="downloads-table">
        <thead>
          <tr>
            <th>Document</th>
            <th>Event</th>
            <th>Type</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>40K Player Packet</td>
            <td>SEO 2026</td>
            <td>Rules & Format</td>
            <td><a href="/documents/seo-2026-40k-packet.pdf" class="btn" style="padding: 8px 16px; font-size: 13px;">Download</a></td>
          </tr>
          <tr>
            <td>AoS Player Packet</td>
            <td>SEO 2026</td>
            <td>Rules & Format</td>
            <td><a href="/documents/seo-2026-aos-packet.pdf" class="btn" style="padding: 8px 16px; font-size: 13px;">Download</a></td>
          </tr>
          <tr>
            <td>Terrain Layout Guide</td>
            <td>All Events</td>
            <td>Terrain</td>
            <td><a href="/documents/terrain-layouts.pdf" class="btn" style="padding: 8px 16px; font-size: 13px;">Download</a></td>
          </tr>
          <tr>
            <td>Code of Conduct</td>
            <td>All Events</td>
            <td>Rules</td>
            <td><a href="/documents/code-of-conduct.pdf" class="btn" style="padding: 8px 16px; font-size: 13px;">Download</a></td>
          </tr>
          <tr>
            <td>FAQ</td>
            <td>All Events</td>
            <td>Info</td>
            <td><a href="#faq" class="btn btn-outline" style="padding: 8px 16px; font-size: 13px;">View</a></td>
          </tr>
        </tbody>
      </table>

      <!-- TOOLS -->
      <h2 class="section-title">Tools & Links</h2>
      <div class="tool-grid">
        <div class="tool-card">
          <h4>üì± Best Coast Pairings</h4>
          <p>Submit army lists and view pairings</p>
          <a href="https://www.bestcoastpairings.com" target="_blank">Open BCP ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>üí¨ Discord</h4>
          <p>Join the community chat</p>
          <a href="https://discord.gg/smiteclub" target="_blank">Join Discord ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>üìß Contact</h4>
          <p>Email for questions or support</p>
          <a href="mailto:info@smiteclub40k.com">Email Us ‚Üí</a>
        </div>
        <div class="tool-card">
          <h4>üõí Storefront</h4>
          <p>Purchase tickets</p>
          <a href="https://www.smiteclub40k.com/store" target="_blank">Shop Now ‚Üí</a>
        </div>
      </div>

    </div>
  </section>
</Layout>
