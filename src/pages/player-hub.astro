---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Player Hub | Scorched Earth Open 2025">
  <style>
    .hero {
      background: #0d0b08;
      padding: 60px 0;
      text-align: center;
      border-bottom: 3px solid #c9a45c;
    }
    
    .hero h1 {
      font-size: 42px;
      margin-bottom: 15px;
      color: #c9a45c;
      text-transform: uppercase;
      letter-spacing: 2px;
    }
    
    .hero-sub {
      font-size: 18px;
      color: #a0a0a0;
    }
    
    .section {
      padding: 50px 0;
    }
    
    .section-title {
      font-size: 28px;
      margin-bottom: 25px;
      color: #c9a45c;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .card {
      background: #1a1209;
      border: 2px solid #3d2e1f;
      border-radius: 8px;
      padding: 25px;
      margin-bottom: 20px;
    }
    
    .card h3 {
      font-size: 20px;
      margin-bottom: 12px;
      color: #c9a45c;
    }
    
    .card p, .card li {
      color: #a0a0a0;
      line-height: 1.6;
    }
    
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }
    
    .link-list {
      list-style: none;
    }
    
    .link-list li {
      margin: 10px 0;
      padding: 12px;
      background: #0d0b08;
      border-radius: 6px;
      border: 1px solid #3d2e1f;
      transition: border-color 0.3s;
    }
    
    .link-list li:hover {
      border-color: #c9a45c;
    }
    
    .link-list a {
      color: #f5f5f5;
      text-decoration: none;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .deadline {
      background: #c9a45c;
      color: #0d0b08;
      padding: 15px;
      border-radius: 6px;
      margin: 15px 0;
      font-weight: 700;
    }
    
    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }
    
    @media (max-width: 768px) {
      .two-col {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <section class="hero">
