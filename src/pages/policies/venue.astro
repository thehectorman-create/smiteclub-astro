---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Venue & Parking | Smite Club">
  <style>
    .hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 60px 0;
      text-align: center;
      border-bottom: 3px solid #7dd3fc;
    }
    
    .hero h1 {
      font-size: 36px;
      color: #0a0a1a;
    }
    
    .section {
      padding: 50px 0;
    }
    
    .content {
      max-width: 800px;
      margin: 0 auto;
    }
    
    .content h2 {
      font-size: 24px;
      color: #0a0a1a;
      margin: 30px 0 15px;
    }
    
    .content p {
      color: #475569;
      line-height: 1.7;
      margin-bottom: 15px;
    }
    
    .info-box {
      background: #f8fafc;
      border-left: 4px solid #7dd3fc;
      padding: 20px;
      margin: 20px 0;
    }
    
    .info-box h3 {
      font-size: 18px;
      color: #0a0a1a;
      margin-bottom: 10px;
    }
  </style>

  <section class="hero">
    <div class="container">
      <h1>Venue & Parking</h1>
